# Identity Report Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# IPFS / Pinata Configuration
# =============================================================================
# Get your JWT from https://app.pinata.cloud/developers/api-keys
PINATA_JWT=your_pinata_jwt_token_here

# =============================================================================
# Blockchain Configuration (Polygon Amoy Testnet)
# =============================================================================
# Public RPC endpoint for Polygon Amoy testnet
NEXT_PUBLIC_RPC_URL=https://rpc-amoy.polygon.technology

# Deployed ProfileRegistry contract address
NEXT_PUBLIC_REGISTRY_ADDRESS=0x_your_contract_address_here

# =============================================================================
# MCP Server Configuration
# =============================================================================
# Transport type: 'sse' for cloud deployment, 'stdio' for local/desktop
MCP_TRANSPORT=sse

# MCP server port (default: 3001)
MCP_PORT=3001

# =============================================================================
# Application Configuration
# =============================================================================
# Node environment: 'development' or 'production'
NODE_ENV=development

# Application port (default: 3000)
PORT=3000

# =============================================================================
# Optional: Private Key for Contract Deployment
# WARNING: Never commit actual private keys!
# =============================================================================
# PRIVATE_KEY=0x_your_private_key_for_deployment
