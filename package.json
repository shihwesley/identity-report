    "axe-core": "^4.11.1",
    "esbuild": "^0.27.2",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "fake-indexeddb": "^6.0.0",
    "hardhat": "^2.22.0",
    "jsdom": "^25.0.1",
    "msw": "^2.0.0",
    "playwright": "^1.49.0",
