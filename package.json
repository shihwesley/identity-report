{
  "name": "universal_profile_dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "node -e \"const fs = require('fs'); const path = './src/lib/realProfile.json'; if (!fs.existsSync(path)) fs.writeFileSync(path, JSON.stringify({identity:{displayName:'User',fullName:'User',email:'',location:'',role:''},preferences:[],shortTermMemory:[],longTermMemory:[],projects:[],conversations:[],insights:[],activeGrants:[]}))\"",
    "build": "next build",
    "build:mcp": "esbuild src/lib/mcp/server.ts --bundle --platform=node --outfile=dist/server.js --external:fsevents --external:canvas",
    "start": "next start",
    "start:mcp": "NODE_ENV=production MCP_TRANSPORT=sse node dist/server.js",
    "lint": "eslint",
    "test": "vitest",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:component": "vitest run --project component",
    "test:e2e": "playwright test",
    "test:contracts": "hardhat test",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1",
    "@streamparser/json-whatwg": "^0.0.22",
    "bip39": "^3.1.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.562.0",
    "next": "16.0.10",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-force-graph-3d": "^1.29.0",
    "three": "^0.182.0",
    "uuid": "^13.0.0",
    "viem": "^2.41.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
