{
  "name": "universal_profile_dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "node -e \"const fs = require('fs'); const path = './src/lib/realProfile.json'; if (!fs.existsSync(path)) fs.writeFileSync(path, JSON.stringify({conversations:[]}))\"",
    "build": "next build",
    "build:mcp": "esbuild src/lib/mcp/server.ts --bundle --platform=node --outfile=dist/server.js --external:fsevents --external:canvas",
    "start": "next start",
    "start:mcp": "NODE_ENV=production MCP_TRANSPORT=sse node dist/server.js",
    "lint": "eslint"
  },
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1",
    "@streamparser/json-whatwg": "^0.0.22",
    "bip39": "^3.1.0",
    "dotenv": "^17.2.3",
    "next": "16.0.10",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-force-graph-3d": "^1.29.0",
    "three": "^0.182.0",
    "uuid": "^13.0.0",
    "viem": "^2.41.2"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "@tailwindcss/postcss": "^4",
    "@types/bip39": "^2.4.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}